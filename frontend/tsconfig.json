// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",           // ← enable the new React JSX transform
    "jsxImportSource": "react",   // ← ensure the right import source
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "vite/client",
      "react",
      "react-dom"
      ]      // ← include Vite’s client types too
  },
  "include": ["src"]
}
